# Production environment variables for user_bot

USER_BOT_REPO_DIR=/opt/user_bot

# Secret used to protect webhook endpoints from unauthorized access.
USER_BOT_WEBHOOK_SECRET=669cc2eaf97e2b0173ddc9ed6aa2cd9dd75ee4072c1f8ed5d87c8ceb0659e62b
# Public HTTPS base URL used for automatic Telegram webhook configuration.
USER_BOT_WEBHOOK_BASE_URL=https://bot.content.run.place

# Telegram chat ID with administrator privileges (single chat).
USER_BOT_ADMIN_CHAT_ID=4896471265
# Telegram chat used for moderation notifications (usually same as admin).
USER_BOT_MODERATION_CHAT_ID=4896471265

# Database connection (Docker compose network address).
USER_BOT_DATABASE_URL=postgresql+asyncpg://bot_platform:bot_platform@postgres:5432/bot_platform

# Subscription pricing.
USER_BOT_SUBSCRIPTION_SETUP_COST_STARS=50
USER_BOT_SUBSCRIPTION_EXTRA_CHAT_COST_STARS=10
USER_BOT_SUBSCRIPTION_EXTRA_CHAT_PERIOD_DAYS=30
USER_BOT_SUBSCRIPTION_YEARLY_COST_STARS=100
USER_BOT_SUBSCRIPTION_YEARLY_PERIOD_DAYS=365

# Limits & quotas.
USER_BOT_MAX_BOTS_TOTAL=12
USER_BOT_MAX_CHATS_PER_BOT=25
USER_BOT_MAX_MEDIA_FILE_MB=20
USER_BOT_USER_CALL_COOLDOWN_SECONDS=20
USER_BOT_USER_CALLS_PER_MINUTE=3
USER_BOT_USER_CALLS_PER_HOUR=30
USER_BOT_CHAT_CALLS_PER_MINUTE=20
USER_BOT_USER_SUBMISSION_COOLDOWN_SECONDS=60
USER_BOT_USER_SUBMISSIONS_PER_5_MINUTES=3
USER_BOT_USER_SUBMISSIONS_PER_DAY=12
USER_BOT_RATE_LIMIT_AUTOMUTE_MINUTES=30

# Scheduler / config reload.
USER_BOT_CONFIG_RELOAD_INTERVAL_SECONDS=60
USER_BOT_BACKUP_SCHEDULE_CRON="0 3 * * *"
USER_BOT_BACKUP_RETENTION_DAYS=21

# Logging.
USER_BOT_LOG_LEVEL=INFO

# Application network configuration.
USER_BOT_APP_HOST=0.0.0.0
USER_BOT_APP_HOST_PORT=8100
USER_BOT_APP_PORT=8000
USER_BOT_APP_SSL_CERTFILE=
USER_BOT_APP_SSL_KEYFILE=

# GHCR credentials and image tag (leave empty when using local builds).
USER_BOT_GHCR_USER=
USER_BOT_GHCR_PAT=
USER_BOT_IMAGE=
USER_BOT_FORCE_BUILD=0
USER_BOT_PULL_IMAGE=0
