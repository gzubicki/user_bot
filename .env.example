# ==== Telegram credentials ====
# Comma-separated list of bot tokens that the platform manages.
BOT_TOKENS="123456:example-token"

# Secret used to protect webhook endpoints from unauthorized access.
WEBHOOK_SECRET="change-me"

# ==== Database ====
# PostgreSQL connection URL in asyncpg format.
DATABASE_URL="postgresql+asyncpg://bot_platform:bot_platform@postgres:5432/bot_platform"

# ==== Subscription pricing (Telegram Stars) ====
# One-time cost for activating a new bot.
SUBSCRIPTION_SETUP_COST_STARS=50
# Recurring cost per extra chat slot.
SUBSCRIPTION_EXTRA_CHAT_COST_STARS=10
# Duration (in days) covered by a single chat subscription purchase.
SUBSCRIPTION_EXTRA_CHAT_PERIOD_DAYS=30
# Optional yearly plan cost (set to 0 to disable).
SUBSCRIPTION_YEARLY_COST_STARS=100
# Optional yearly plan duration in days.
SUBSCRIPTION_YEARLY_PERIOD_DAYS=365

# ==== Limits & quotas ====
# Maximum bots the instance should allow.
MAX_BOTS_TOTAL=12
# Maximum chats a single bot may serve simultaneously.
MAX_CHATS_PER_BOT=25
# Maximum accepted size (in megabytes) for uploaded media.
MAX_MEDIA_FILE_MB=20
# User cooldown between quote requests (seconds).
USER_CALL_COOLDOWN_SECONDS=20
# Max quote requests per user per minute.
USER_CALLS_PER_MINUTE=3
# Max quote requests per user per hour.
USER_CALLS_PER_HOUR=30
# Max quote requests per chat per minute.
CHAT_CALLS_PER_MINUTE=20
# Cooldown between content submissions by a user (seconds).
USER_SUBMISSION_COOLDOWN_SECONDS=60
# Max submissions per user in a 5-minute window.
USER_SUBMISSIONS_PER_5_MINUTES=3
# Max submissions per user per day.
USER_SUBMISSIONS_PER_DAY=12
# Duration (in minutes) of automatic mute when limits are exceeded.
RATE_LIMIT_AUTOMUTE_MINUTES=30

# ==== Scheduler / config reload ====
# Interval (seconds) for reloading environment configuration at runtime.
CONFIG_RELOAD_INTERVAL_SECONDS=60
# Cron expression for daily backups (server local time).
BACKUP_SCHEDULE_CRON="0 3 * * *"
# Number of days to retain backups.
BACKUP_RETENTION_DAYS=21

# ==== Moderation / moderator chat ====
# Telegram chat identifier where moderation notifications should be sent.
MODERATION_CHAT_ID=0

# ==== Logging ====
# Minimum log level (DEBUG, INFO, WARNING, ERROR).
LOG_LEVEL="INFO"
