# Skopiuj ten plik do .env i dostosuj warto≈õci do swoich potrzeb.

# ==== Telegram credentials ====
# Secret used to protect webhook endpoints from unauthorized access.
USER_BOT_WEBHOOK_SECRET="change-me"
# Public HTTPS base URL used to configure Telegram webhooks automatically.
# Example: https://bot.example.com
USER_BOT_WEBHOOK_BASE_URL=""

# Telegram chat ID with administrator privileges (single chat).
USER_BOT_ADMIN_CHAT_ID=0

# ==== Application ====
# Host port exposed by docker-compose for the FastAPI application.
USER_BOT_APP_HOST_PORT=8100

# ==== Database ====
# PostgreSQL connection URL in asyncpg format.
USER_BOT_DATABASE_URL="postgresql+asyncpg://bot_platform:bot_platform@postgres:5432/bot_platform"

# ==== Subscription pricing (Telegram Stars) ====
# One-time cost for activating a new bot.
USER_BOT_SUBSCRIPTION_SETUP_COST_STARS=50
# Recurring cost per extra chat slot.
USER_BOT_SUBSCRIPTION_EXTRA_CHAT_COST_STARS=10
# Duration (in days) covered by a single chat subscription purchase.
USER_BOT_SUBSCRIPTION_EXTRA_CHAT_PERIOD_DAYS=30
# Optional yearly plan cost (set to 0 to disable).
USER_BOT_SUBSCRIPTION_YEARLY_COST_STARS=100
# Optional yearly plan duration in days.
USER_BOT_SUBSCRIPTION_YEARLY_PERIOD_DAYS=365

# ==== Limits & quotas ====
# Maximum bots the instance should allow.
USER_BOT_MAX_BOTS_TOTAL=12
# Maximum chats a single bot may serve simultaneously.
USER_BOT_MAX_CHATS_PER_BOT=25
# Maximum accepted size (in megabytes) for uploaded media.
USER_BOT_MAX_MEDIA_FILE_MB=20
# User cooldown between quote requests (seconds).
USER_BOT_USER_CALL_COOLDOWN_SECONDS=20
# Max quote requests per user per minute.
USER_BOT_USER_CALLS_PER_MINUTE=3
# Max quote requests per user per hour.
USER_BOT_USER_CALLS_PER_HOUR=30
# Max quote requests per chat per minute.
USER_BOT_CHAT_CALLS_PER_MINUTE=20
# Cooldown between content submissions by a user (seconds).
USER_BOT_USER_SUBMISSION_COOLDOWN_SECONDS=60
# Max submissions per user in a 5-minute window.
USER_BOT_USER_SUBMISSIONS_PER_5_MINUTES=3
# Max submissions per user per day.
USER_BOT_USER_SUBMISSIONS_PER_DAY=12
# Duration (in minutes) of automatic mute when limits are exceeded.
USER_BOT_RATE_LIMIT_AUTOMUTE_MINUTES=30

# ==== Scheduler / config reload ====
# Interval (seconds) for reloading environment configuration at runtime.
USER_BOT_CONFIG_RELOAD_INTERVAL_SECONDS=60
# Cron expression for daily backups (server local time).
USER_BOT_BACKUP_SCHEDULE_CRON="0 3 * * *"
# Number of days to retain backups.
USER_BOT_BACKUP_RETENTION_DAYS=21

# ==== Moderation / moderator chat ====
# Telegram chat identifier where moderation notifications should be sent.
USER_BOT_MODERATION_CHAT_ID=0

# ==== Logging ====
# Minimum log level (DEBUG, INFO, WARNING, ERROR).
USER_BOT_LOG_LEVEL="INFO"

# ==== Deployment (optional) ====
# Absolute path to the repository on the server (used by deploy.sh when run remotely).
USER_BOT_REPO_DIR="/opt/user_bot"
# Alternative Docker Compose file(s), separated by ':' if needed.
USER_BOT_COMPOSE_FILE=""
# Container network binding options.
USER_BOT_APP_HOST="0.0.0.0"
USER_BOT_APP_PORT=8000
USER_BOT_APP_SSL_CERTFILE=""
USER_BOT_APP_SSL_KEYFILE=""
# Remote image configuration (leave empty to build locally).
USER_BOT_IMAGE=""
USER_BOT_GHCR_USER=""
USER_BOT_GHCR_PAT=""
# Set to 1 to force image rebuild even when USER_BOT_IMAGE is provided.
USER_BOT_FORCE_BUILD=0
